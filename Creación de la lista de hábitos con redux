import { useSelector } from "react-redux";

const HabitList = () => {
  const habits = useSelector((state) => state.habits.habits);

  return (
    <div className="max-w-md mx-auto p-4 bg-white shadow-md rounded-md">
      <h2 className="text-2xl font-bold text-center mb-4">Tus Hábitos</h2>
      <ul className="space-y-2">
        {habits.map((habit) => (
          <li key={habit.id} className="p-3 bg-gray-100 rounded flex justify-between items-center">
            <span>{habit.name} - {habit.completedDays} días</span>
            <button className="bg-blue-500 text-white px-3 py-1 rounded">Done</button>
          </li>
        ))}
      </ul>
    </div>
  );
};

export default HabitList;
